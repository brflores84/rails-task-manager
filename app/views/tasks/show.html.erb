<h1>More infos <%= @task[:name] %></h1>
<p>Details: <%= @task[:details] %></p>
<p>Completed : <%= @task[:completed] %></p>

<p><%= link_to "Edit task", task_edit_path %></p>

<p><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Back to your tasks", tasks_path %></p>
